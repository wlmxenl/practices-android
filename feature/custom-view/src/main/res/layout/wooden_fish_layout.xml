<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_wooden_fish"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_153"
        android:scaleType="fitXY"
        android:src="@drawable/ic_wooden_fish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_wooden_hammer"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_205"
        android:layout_marginStart="@dimen/dp_67"
        android:layout_marginBottom="@dimen/dp_89"
        android:scaleType="fitXY"
        android:src="@drawable/ic_wooden_hammer"
        app:layout_constraintBottom_toBottomOf="@id/iv_wooden_fish"
        app:layout_constraintStart_toEndOf="@+id/iv_wooden_fish" />

</androidx.constraintlayout.widget.ConstraintLayout>
